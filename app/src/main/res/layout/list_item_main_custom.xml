<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <!-- Horizontal: Items side by side .
    Weight = 1 below forces first item to take all space, forcing the sub item to the right
    the android:text tags below are for preview and will be ignored while running-->
    <TextView
        android:id="@+id/text_view_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Medication Name"
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text_view_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="14sp"
        android:textColor="#666666" />

</LinearLayout>